<h1><%= @book.title %></h1>
<p>Author: <%= @book.author %></p>
<p>ISBN: <%= @book.isbn %></p>
<p>Status: <%= @book.available? ? "Available" : "Borrowed" %></p>

<% if @book.available? %>
  <% if current_user %>
    <%= button_to "Borrow", borrow_book_path(@book), method: :post %>
  <% else %>
    <p>Please <%= link_to "log in", login_path %> to borrow this book.</p>
  <% end %>
<% else %>
  <p>This book is currently borrowed.</p>
<% end %>
